        // Create the prompt
        final String prompt = '''
Create a bilingual ${contentTypeText} in both English and Amharic about "${topic}".
${isAmharic ? 'The topic was provided in Amharic, ensure you understand it correctly.' : ''}
The ${contentTypeText} should be appropriate for ${ageGroupText}.
${type == StoryType.fairyTale ? 'Make it entertaining and include a moral lesson.' : 'Make it clever and not too easy to solve.'}

Respond in the following JSON format only:
{
  "titleEn": "English title of the ${contentTypeText}",
  "titleAm": "Amharic title of the ${contentTypeText}",
  "contentEn": "English content of the ${contentTypeText}",
  "contentAm": "Amharic content of the ${contentTypeText}",
  ${type == StoryType.riddle ? '"answerEn": "English answer to the riddle",\n  "answerAm": "Amharic answer to the riddle",' : ''}
  "topic": "Topic of the ${contentTypeText}"
}

Ensure the Amharic text is high quality and natural.
''';

        final content = await _model!.generateContent([Content.text(prompt)]);
        final response = content.text?.trim() ?? '';

        // Parse the JSON response
        try {
          // Extract JSON object from the response
          final jsonString =
              response.replaceAll('```json', '').replaceAll('```', '').trim();

          // Parse JSON
          final Map<String, dynamic> jsonData = Map<String, dynamic>.from(
            Uri.dataFromString('{"source": $jsonString}').data!.source,
          );

          final StoryCategory category =
              _getCategoryFromTopic(jsonData['topic'] ?? topic, type);

          // Create the story object
          final Story story = Story(
            titleEn: jsonData['titleEn'] ?? 'Untitled',
            titleAm: jsonData['titleAm'] ?? 'ያልተሰየመ',
            contentEn: jsonData['contentEn'] ?? 'No content generated',
            contentAm: jsonData['contentAm'] ?? 'ይዘት አልተፈጠረም',
            type: type,
            topic: jsonData['topic'] ?? topic,
            answerEn: type == StoryType.riddle ? jsonData['answerEn'] : null,
            answerAm: type == StoryType.riddle ? jsonData['answerAm'] : null,
            dateCreated: DateTime.now(),
            category: category,
          );

          // Add to stories list
          _stories.add(story);
          notifyListeners();

          return story;
        } catch (e) {
          debugPrint('Error parsing AI response: $e');
          _error = 'Failed to generate story. Please try again.';
          notifyListeners();
          return null;
        }
      } catch (e) {
        debugPrint('AI generation error: $e');
        _error =
            'Failed to connect to AI service. Please check your connection and try again.';
        notifyListeners();
        return null;
      } finally {
        _isLoading = false;
        notifyListeners();
      }
    }
  }
}
